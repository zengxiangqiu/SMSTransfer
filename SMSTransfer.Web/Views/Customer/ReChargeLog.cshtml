@model SMSTransfer.Web.ViewModels.ReChargeLogViewModel
@{
    ViewBag.Title = "充值记录";
}
<h2>充值记录</h2>
<br />
<div class="row">
    <div class="table-responsive">
        <table id="example" class="display" style="width:100%">
            @if (Model.Logs.Count() == 0)
            {
                <tr>
                    <td colspan="10">No Record's found.</td>
                </tr>
            }
            else
            {
                <thead>
                    <tr>
                        <th> 用户密钥</th>
                        <th>充值点数</th>
                        <th>修改人</th>
                        <th>修改日期</th>
                        @*<th data-firstsort="desc">Address</th>
                            <th data-defaultsign="AZ">City</th>
                            <th data-defaultsort="disabled">Country</th>*@
                    </tr>
                </thead>
                foreach (var item in Model.Logs)
                {
                    <tr>
                        <td>@item.UserKey</td>
                        <td>@item.AddPoints</td>
                        <td>@item.LastModBy</td>
                        <td>@item.LastModTime</td>
                        @*<td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>*@
                    </tr>
                }
            }
        </table>
    </div>
</div>

    <div>
        @Html.ActionLink("返回主页", "Index")
    </div>

    @section scripts{
        <script>
            $(document).ready(function () {
                $('#example').DataTable();
            });
        </script>
    }
